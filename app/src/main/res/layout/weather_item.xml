<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginStart="@dimen/half_app_margin"
    android:layout_marginTop="@dimen/quarter_app_margin"
    android:layout_marginEnd="@dimen/half_app_margin"
    android:layout_marginBottom="@dimen/quarter_app_margin"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:contentPadding="@dimen/half_app_margin">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        tools:text="weather" />

</androidx.cardview.widget.CardView>